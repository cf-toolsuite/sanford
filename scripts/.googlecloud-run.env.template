# Application Configuration
APP_NAME=sanford
APP_VERSION=0.0.1-SNAPSHOT
PROJECT_ID=your-google-cloud-project-id
REGION=us-central1
DEPLOYMENT_METHOD=src|jar|services

# Gradle Build Properties
VECTOR_DB_PROVIDER=chroma|pgvector|redis|weaviate
MODEL_API_PROVIDER=openai|ollama

# Runtime Configuration
SPRING_PROFILES_ACTIVE=default,cloud,openai,pgvector
JAVA_TOOL_OPTIONS=-XX:+UseZGC -XX:+UseStringDeduplication

# Database Configuration
POSTGRES_HOST=your-cloudsql-instance
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password

# GenAI Service Configurations
GENAI_CHAT_ENDPOINT=your-genai-chat-endpoint
GENAI_EMBEDDINGS_ENDPOINT=your-genai-embeddings-endpoint

# Storage Configuration
MINIO_ENDPOINT_HOST=your-cloud-storage-endpoint
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
